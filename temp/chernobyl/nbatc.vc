   PMaxMP(a)=MaxMP[pi(a)];
   PHP(a)=CurHP[pi(a)];
   PMP(a)=CurMP[pi(a)];
   PHit(a)=Hit[pi(a)];
   PDod(a)=Dod[pi(a)];
   PMag(a)=Mag[pi(a)];
   PMgr(a)=Mgr[pi(a)];
   PRea(a)=Rea[pi(a)];
   PMbl(a)=Mbl[pi(a)];
   PFer(a)=Fer[pi(a)];
   PAtk(a)=Atk[pi(a)];
   PDef(a)=Def[pi(a)];
   PXP(a)=0; // irrelevant
   PGP(a)=0; // ditto
   PCounterChance(a)=0;                 // this will change
