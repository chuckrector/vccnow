  {
   b=Entity.LocX(e)*16+8;
   c=(Entity.LocY(e)-(YWin/ 16))*16+16-a;
   VCATextNum(b,c,v,1);
   ReDraw();
   VCClearRegion(b-30,c,b+30,c+8);
  }
