event // draw the time bars
{
 for (n,1,NumChars,1)
  {
   m=138+(n*9);
   t=((PTime(n)*30)/MaxTime())+280;
   if (t>310) t=310;

   for (y,m+1,m+7,1)
    {
     VCLine(280,y,311,y,1); 
    }

   if (PTime(n))                 // spiffy gradient time bar
    {     
     for (x,280,t,1)
      {
       for (y,m+1,m+7,1)
        {
         c=(x-280)*23;
         c=c/32;
         c+=136+y-m;
         if (c>159) c-=(c-159)*2;
         Screen[x,y]=c;
        }
      }
    }
  }
}

